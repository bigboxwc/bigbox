{
	"name": "bigbox",
	"title": "BigBox",
	"author": "Spencer Finnell",
	"description": "WooCommerce theme for large stores.",
	"version": "1.5.1",
	"license": "GPL-2.0-or-later",
	"main": "webpack.config.js",
	"devDependencies": {
		"@wordpress/scripts": "1.1.4",
		"autoprefixer": "8.4.1",
		"babel-core": "6.26.3",
		"babel-eslint": "8.2.3",
		"babel-loader": "7.1.4",
		"babel-plugin-import-glob": "^2.0.0",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"bootstrap": "^4.1.1",
		"classnames": "^2.2.5",
		"cross-env": "^5.1.4",
		"eslint": "4.19.1",
		"eslint-config-wordpress": "2.0.0",
		"eslint-plugin-jsx-a11y": "6.0.3",
		"eslint-plugin-react": "7.7.0",
		"eslint-plugin-require-jsdoc-except": "^1.1.0",
		"eslint-plugin-wordpress": "git://github.com/WordPress-Coding-Standards/eslint-plugin-wordpress.git#1774343f6226052a46b081e01db3fca8793cc9f1",
		"exports-loader": "^0.7.0",
		"extract-text-webpack-plugin": "4.0.0-beta.0",
		"file-loader": "^1.1.11",
		"node-sass": "^4.9.0",
		"postcss-loader": "^2.1.5",
		"prop-types": "^15.6.1",
		"raw-loader": "^0.5.1",
		"react": "^16.3.2",
		"react-dom": "^16.3.2",
		"react-redux": "^5.0.7",
		"redux": "^4.0.0",
		"redux-thunk": "^2.2.0",
		"sass-loader": "^7.0.1",
		"stylelint": "^9.2.0",
		"stylelint-config-wordpress": "^13.0.0",
		"svg-sprite-loader": "^3.7.3",
		"svgo": "^1.0.5",
		"svgo-loader": "^2.1.0",
		"webpack": "^4.8.1",
		"webpack-cli": "^2.1.3",
		"webpack-rtl-plugin": "github:yoavf/webpack-rtl-plugin#develop"
	},
	"babel": {
		"plugins": [
			"import-glob",
			"transform-react-jsx",
			"transform-object-rest-spread",
			"transform-runtime"
		],
		"presets": [
			[
				"env",
				{
					"modules": false,
					"targets": {
						"browsers": [
							">0.25%",
							"not ie 11",
							"not op_mini all"
						]
					}
				}
			]
		]
	},
	"scripts": {
		"build": "cross-env NODE_ENV=production webpack",
		"dev": "cross-env NODE_ENV=default webpack --watch",
		"lint": "./node_modules/.bin/eslint .; exit 0",
		"lint:fix": "./node_modules/.bin/eslint . --fix; exit 0",
		"lint:jsdoc": "eslint . --config eslint/jsdoc-config.js; exit 0",
		"check-licenses": "./bin/check-npm-licenses.sh; exit 0",
		"css-lint": "./node_modules/.bin/stylelint resources/**/*.scss --syntax scss; exit 0",
		"css-lint:fix": "./node_modules/.bin/stylelint resources/**/*.scss --syntax scss --fix; exit 0",
		"generate-font-list": "./bin/generate-google-font-list.sh",
		"package-theme": "./bin/package-theme.sh",
		"setup-theme": "npm install && composer install && npm run dev"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/bigboxwc/bigbox-theme/"
	},
	"bugs": {
		"url": "https://github.com/bigboxwc/bigbox-theme/issues"
	},
	"homepage": "https://bigboxwc.com"
}
