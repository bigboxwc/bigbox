{
	"name": "bigbox",
	"description": "WooCommerce theme for large stores.",
	"type": "wordpress-theme",
	"license": "GPL-3.0",
	"authors": [
		{
			"name": "Spencer Finnell",
			"email": "contact@bigboxwc.com"
		}
	],
	"autoload": {
		"classmap": ["app/"]
	},
	"scripts": {
		"install-codestandards": [
			"Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
		],
		"lint": "vendor/bin/phpcs --standard=phpcs.xml.dist",
		"lint:fix": "vendor/bin/phpcbf --standard=phpcs.xml.dist --report-summary --report-source"
	},
	"require": {
		"a5hleyrich/wp-background-processing": "^1.0",
		"bigboxwc/wp-template-loader": "1.0.2"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
		"squizlabs/php_codesniffer": "^3.3",
		"phpcompatibility/phpcompatibility-wp": "*",
		"wp-coding-standards/wpcs": "^1"
	}
}
